		<techLevel>Ultra</techLevel>
		<baseCost>8000</baseCost>
		<researchViewX>0</researchViewX>
		<researchViewY>1</researchViewY>
		<prerequisites>
			<li>MedicineProduction</li>
			<li>VitalsMonitor</li>
			<li>Bionics</li>
		</prerequisites>
	</ResearchProjectDef>

</Defs>